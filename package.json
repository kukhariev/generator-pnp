{
  "name": "generator-pnp",
  "version": "1.0.1",
  "description": "Generate TypeScript or JavaScript node project",
  "author": {
    "name": "o.kukhariev",
    "email": "q_h@inbox.ru"
  },
  "repository": "kukhariev/generator-pnp",
  "keywords": [
    "yeoman-generator",
    "typescript",
    "node",
    "module"
  ],
  "license": "MIT",
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 5.8.0"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "typings": "generators/index.d.ts",
  "scripts": {
    "clean": "rimraf generators",
    "build": "npm run tslint && npm run clean && npm run build-ts",
    "postbuild": "copyfiles -a -u 1 \"src/**/templates/**/*\" generators",
    "test": "mocha",
    "test:watch": "mocha --watch",
    "build-ts": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "preversion": "npm run build",
    "postversion": "git push --follow-tags"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mkdirp": "^0.5.2",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.14.4",
    "@types/yeoman-generator": "^3.1.1",
    "chai": "^4.2.0",
    "copyfiles": "^2.1.0",
    "mocha": "^6.0.2",
    "rimraf": "^2.6.3",
    "ts-node": "^6.2.0",
    "tslint": "^5.15.0",
    "typescript": "^2.9.2",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^1.9.1"
  },
  "dependencies": {
    "yeoman-generator": "^3.2.0",
    "chalk": "^2.4.2",
    "mkdirp": "^0.5.1",
    "yosay": "^2.0.2"
  }
}
