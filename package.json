{
  "name": "generator-pnp",
  "version": "0.0.1",
  "description":
    "Generate TypeScript or JavaScript node project",
  "author": {
    "name": "o.kukhariev",
    "email": "q_h@inbox.ru"
  },
  "repository": "kukhariev/generator-pnp",
  "keywords": ["yeoman-generator", "typescript", "node", "module"],
  "license": "MIT",
  "engines": {
    "npm": ">= 6.0.0"
  },
  "files": ["generators"],
  "main": "generators/index.js",
  "typings": "generators/index.d.ts",
  "scripts": {
    "clean": "rimraf generators",
    "build": "npm run tslint && npm run clean && npm run build-ts",
    "postbuild": "copyfiles -a -u 1 \"src/**/templates/**/*\" generators",
    "test": "./node_modules/.bin/mocha",
    "test:watch": "./node_modules/.bin/mocha --watch",
    "build-ts": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "preversion": "npm run build",
    "postversion": "git push --follow-tags && npm publish"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mkdirp": "^0.5.2",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.1.2",
    "@types/yeoman-generator": "^2.0.3",
    "chai": "^4.1.2",
    "copyfiles": "^2.0.0",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.2",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^1.7.2"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "mkdirp": "^0.5.1",
    "yeoman-generator": "^2.0.5",
    "yosay": "^2.0.2"
  }
}
