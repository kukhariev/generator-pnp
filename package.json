{
  "name": "generator-pnp",
  "version": "1.0.6",
  "description": "Generate TypeScript or JavaScript node project",
  "author": {
    "name": "o.kukhariev",
    "email": "q_h@inbox.ru"
  },
  "repository": "kukhariev/generator-pnp",
  "keywords": [
    "yeoman-generator",
    "typescript",
    "node",
    "module"
  ],
  "license": "MIT",
  "engines": {
    "node": ">= 8.0.0"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "typings": "generators/index.d.ts",
  "scripts": {
    "clean": "rimraf generators",
    "build": "npm run tslint && npm run clean && npm run build-ts",
    "postbuild": "copyfiles -a -u 1 \"src/**/templates/**/*\" generators",
    "test": "npm run build && mocha",
    "build-ts": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "postversion": "npm run build && git push --follow-tags"
  },
  "devDependencies": {
    "@types/chai": "4.2.9",
    "@types/mkdirp": "1.0.0",
    "@types/mocha": "7.0.1",
    "@types/node": "12.12.28",
    "@types/yeoman-generator": "3.1.4",
    "chai": "4.2.0",
    "copyfiles": "2.2.0",
    "mocha": "7.0.1",
    "rimraf": "3.0.2",
    "ts-node": "8.6.2",
    "tslint": "5.20.1",
    "typescript": "3.8.2",
    "yeoman-assert": "3.1.1",
    "yeoman-test": "2.2.0"
  },
  "dependencies": {
    "yeoman-generator": "^4.0.2",
    "chalk": "^2.4.2",
    "mkdirp": "^1.0.0",
    "yosay": "^2.0.2"
  }
}
